script#editorial-board(type='text/x-jquery-tmpl').
    <div class="row">
        <div class="member col-7">
            <div class="member-name">
              <h5>${ name }</h5>
            </div>
            <div class="member-affiliation">
              <h6>${ university }, ${ country }</h6>
            </div>
        </div>
        <div class="image col-5">
            <div class="float-right">
                <img class="member-image" src="${ image }">
            </div>
        </div>
    </div>

script.
  
  var url = "http://tmp.fivecat.xyz/api/collections/get/editorial_board";
  var editorialBoard = $.getApiData(url);

  console.log(editorialBoard);

  editorialBoard.forEach( function(data) {
    var member = new Member( data );
    $.tmpl( $('#editorial-board'), member).appendTo('#editorialBoard');
  });
  