section
  header.major
    h2 Contact Us

  div.content
    form.form#form
      .form-group.row
        label.col-4.col-form-label(for='name') Name
        .col-8
          .input-group
            .input-group-addon
              i.fa.fa-address-book
            input#name.form-control.here(name='name', type='text', required='required')
      .form-group.row
        label.col-4.col-form-label(for='email') Email
        .col-8
          input#email.form-control.here(name='email', type='text', required='required')
      .form-group.row
        label.col-4.col-form-label(for='organization') Organization
        .col-8
          input#organization.form-control.here(name='organization', type='text', required='required')
      .form-group.row
        label.col-4.col-form-label(for='message') Message
        .col-8
          textarea#message.form-control(name='message', cols='40', rows='5', required='required')
      .form-group.row
        .offset-4.col-8
          button.btn(name='submit', type='submit') Send Message


script.
  var url = "https://jaepp.borke.site/api/forms/submit/contact?token=171b80d71686d3b5b33dc42c3eff88";
  
  $(document).on("submit", "form", function(e) {
    e.preventDefault();
    var name = $("#name").val();
    var email = $("#email").val();
    var organization = $("#organization").val();
    var message = $("#message").val();

    if (
      name != "" &&
      message !== ""
    ) {
      var data = {
        name: name,
        email: email,
        organization: organization,
        message: message,
      };

      var body = { form: data };

      $.ajax({
        url: url,
        type: "POST",
        contentType: "application/json",
        data: JSON.stringify(body),
        success: function(json) {
          swal("Thank you for your interest!");
        }
      });

      document.getElementById("form").reset();
    } else {
      return;
    }
  });